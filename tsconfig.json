{
	"compilerOptions": {
		"target": "es2017",
        "module": "commonjs",
		"esModuleInterop": true,
		"declaration": true,
		"outDir": "lib",
		"sourceMap": true,
		"strict": true,
		"suppressImplicitAnyIndexErrors": true,
        "skipLibCheck": true,
		"removeComments": true,
        "rootDir": "src/"
	},
	"include": ["src/"],
	"exclude": ["node_modules/", "tests/"]
}
